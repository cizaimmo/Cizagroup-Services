<script>
function updatePrice(){
const pack=document.getElementById("pack").value;
const price=document.getElementById("price");
if(pack==="Essentiel") price.textContent="Prix : 85 000 BIF";
if(pack==="Famille") price.textContent="Prix : 150 000 BIF";
if(pack==="Premium") price.textContent="Prix : 280 000 BIF";
}
</script>

